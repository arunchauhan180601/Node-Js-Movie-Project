<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>EditMovie Page</title>
    <link href="../uploads/style.css" rel="stylesheet">
</head>

<body>
  <%- include("./partials/nav") %>

    <div class="container mt-5 pt-5 addDataFormMearginTop" style="min-height: 85vh;">
      <form action="/editinfo/<%= editdata._id %>" method="post" enctype="multipart/form-data" id="form">
        <h1>Edit Movie</h1>
        <div class="mb-3">
          <label for="title" class="form-label">Movie_Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= editdata.Title %>"
            aria-describedby="emailHelp">

        </div>
        <div class="mb-3">
          <label for="productionName" class="form-label">ProductionName</label>
          <input type="text" class="form-control" id="productionName" value="<%= editdata.ProductionName %>"
            name="productionName">
        </div>

        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea class="form-control" id="body" name="body" value="<%= editdata.Body %>"></textarea>
        </div>

        <div class="mb-3">
          <label for="video" class="form-label">Video</label>
          <input type="file" class="form-control" id="video" name="video">


        </div>

        <button type="submit" class="btn btn-dark mt-4">Update</button>
      </form>
    </div>

    <%- include("./partials/footer") %>

      <%- include("./partials/script") %>
</body>

</html>